datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  surname        String
  phone          String
  dni            String   @unique
  hasAccess      Boolean  @default(false)
  expirationDate DateTime
  remainingDays  Int
  createdAt      DateTime @default(now())
  checkIns       CheckIn[] @relation("UserCheckIns") // Relación inversa agregada
}

model CheckIn {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      DateTime @default(now())
  user      User     @relation("UserCheckIns", fields: [userId], references: [id]) // Relación inversa agregada
}
